{
  "name": "@ultranomic/di",
  "version": "1.1.0",
  "description": "A lightweight, type-safe dependency injection framework for TypeScript applications with comprehensive lifecycle management and layered architecture support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsgo",
    "clean": "rm -rf dist",
    "test": "node --test src/*.test.ts",
    "test:coverage": "node --experimental-test-coverage --test src/*.test.ts",
    "typecheck": "tsgo --noEmit",
    "format": "prettier --write .",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "dependency-injection",
    "typescript",
    "di",
    "ioc",
    "inversion-of-control",
    "service-container",
    "lifecycle-management",
    "modular-architecture",
    "orpc",
    "hooks",
    "type-safe"
  ],
  "author": "Ultranomic",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ultranomic/di.git"
  },
  "homepage": "https://github.com/ultranomic/di#readme",
  "bugs": {
    "url": "https://github.com/ultranomic/di/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@ultranomic/hook": "^1.3.5"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "@typescript/native-preview": "latest"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
