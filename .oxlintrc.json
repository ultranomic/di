{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["eslint", "typescript", "unicorn", "oxc", "import", "promise", "vitest", "node", "jsdoc"],
  "categories": {
    "correctness": "error",
    "perf": "warn",
    "restriction": "warn",
    // "suspicious": "warn",
    // "pedantic": "warn",
    // "style": "warn"
  },
  "env": {},
  "ignorePatterns": ["**/*.d.ts", ".opencode/**", ".agents/skills"],
  "rules": {
    //Correctness
    "jsdoc/check-tag-names": "off",

    //Restrictions
    "eslint/no-unused-vars": ["warn", { "ignoreRestSiblings": true, "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "eslint/no-empty-function": "off",
    "eslint/no-await-in-loop": "off",
    "eslint/class-methods-use-this": "off",
    "eslint/no-undefined": "off",
    "eslint/no-plusplus": "off",
    "eslint/default-case": "off",
    "oxc/no-async-await": "off",
    "oxc/no-optional-chaining": "off",
    "oxc/no-rest-spread-properties": "off",
    "oxc/no-barrel-file": "off",
    "import/extensions": "off",
    "import/no-default-export": "off",
    "import/no-relative-parent-imports": "off",
    "import/unambiguous": "off",
    "promise/spec-only": "off",
    "typescript/explicit-function-return-type": "off",
    "typescript/explicit-module-boundary-types": "off",
    "vue/max-props": "off",
    "typescript-eslint/no-empty-object-type": "off",
    "typescript-eslint/no-non-null-assertion": "off",
    "typescript-eslint/no-import-type-side-effects": "off",
    "eslint/no-use-before-define": "off",
    "eslint/no-console": "off",
    "eslint-plugin-jest/no-conditional-expect": "off",
    "eslint-plugin-unicorn/no-process-exit": "off",
    "eslint-plugin-node/no-process-env": "off",

    // //Suspicious
    // "oxc/no-async-endpoint-handlers": "off", // we use fastify which supports async handlers
    // "unicorn/consistent-function-scoping": "off",
    // "import/no-unassigned-import": "off",

    // //Pedantic
    // "eslint/no-inline-comments": "off",
    // "eslint/capitalized-comments": "off",
    // "eslint/no-negated-condition": "off",
    // "eslint/max-lines": "off",
    // "eslint/max-lines-per-function": "off",
    // "eslint/no-warning-comments": "off",
    // "import/max-dependencies": "off",
    // "unicorn/no-useless-undefined": "off",
    // "unicorn/no-array-callback-reference": "off",
    // "unicorn/explicit-length-check": "off",
    // "unicorn/no-lonely-if": "off",
    // "typescript/return-await": "off",
    // "typescript/no-unsafe-assignment": "off",
    // "typescript/no-unsafe-member-access": "off",
    // "typescript/no-unsafe-call": "off",
    // "typescript/no-unsafe-argument": "off",
    // "typescript/no-unsafe-type-assertion": "off",
    // "typescript/no-confusing-void-expression": "off",
    // "typescript/strict-boolean-expressions": "off",
    // "jsdoc/require-returns": "off",
    // "jsdoc/require-param": "off",

    // //Style
    // "eslint/max-statements": "off",
    // "eslint/max-params": ["warn", { "max": 5 }],
    // "eslint/no-ternary": "off",
    // "eslint/no-magic-numbers": "off",
    // "eslint/curly": "off",
    // "eslint/arrow-body-style": "off",
    // "eslint/id-length": "off",
    // "eslint/no-nested-ternary": "off",
    // "eslint/prefer-destructuring": "off",
    // "eslint/no-continue": "off",
    // "eslint/sort-keys": "off",
    // "eslint/sort-imports": "off",
    // "import/no-named-export": "off",
    // "import/no-namespace": "off",
    // "import/consistent-type-specifier-style": "off",
    // "import/prefer-default-export": "off",
    // "import/group-exports": "off",
    // "import/exports-last": "off",
    // "import/no-nodejs-modules": "off",
    // "unicorn/switch-case-braces": "off",
    // "unicorn/no-null": "off",
    // "unicorn/no-array-method-this-argument": "off",
    // "unicorn/no-nested-ternary": "off",
    // "unicorn/no-await-expression-member": "off",
    // "unicorn/catch-error-name": "off",
    // "typescript/consistent-type-definitions": ["warn", "type"],
    // "typescript/consistent-type-imports": "off",
    // "vue/define-props-destructuring": "off",
    // "promise/avoid-new": "off",
    // "jest/require-hook": "off",
